<div class="container">
  <h2><%= @customer.name %>さんの会員詳細</h2>

  <div class="row m-5">
    <div class="col-10 offset-1">
      <table class="table">
        <tr>
          <th>会員ID</th>
          <td><%= @customer.id %></td>
        </tr>

        <tr>
          <th>ユーザーネーム</th>
          <td><%= @customer.name %></td>
        </tr>

        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>

        <tr>
          <th>会員ステータス</th>
            <% if @customer.is_active == true %>
              <td>退会済み</td>
            <% else %>
              <td>有効</td>
            <% end %>
        </tr>
      </table>

      <div class="d-flex justify-content-around">
        <p><%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %></p>
      </div>
    </div>
  </div>
</div>