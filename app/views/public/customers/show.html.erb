<div class="container">
  <h2 class="my-3">マイページ</h2>
  <div class="row">
    <h3 class="my-1">登録情報</h3>
    <%= link_to "編集する", edit_info_path, class: "btn btn-success ml-5" %>
  </div>

  <table class="table my-2">
    <tbody>
      <tr>
        <td>名前</td>
        <td><%= @customer.name %></td>
      </tr>

      <tr>
        <td>メールアドレス</td>
        <td><%= @customer.email %></td>
      </tr>
    </tbody>
  </table>

  <div class="my-4">
    <h3>レビュー履歴 <%= link_to "一覧を見る", reviews_path, class: "btn btn-success" %></h3>
  </div>
</div>