<div class="container">
  <h2>会員情報編集</h2>

<div class="row">
    <%= form_with model: @customer, url: update_info_path, method: :patch do |f| %>
      <div class="form-group">
        <%= f.label :"名前" %>
        <%= f.text_field :name %>
      </div>

      <div class="form-group" >
        <%= f.label :"メールアドレス" %>
        <%= f.text_field :email %>
      </div>

      <div>
        <%= f.submit "編集内容を保存", class: "btn btn-success" %>
        <%= link_to "退会する", unsubscribe_customers_path, class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>