<div class="container">
  <div class="row offset-1">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
        <h3>レビュー編集</h3>
    </div>
  </div>

  <div class="row offset-3">
    <div class="col-sm-10 px-sm-0 mx-auto mb-5 position-static">
      <%= form_with model: @review do |f| %>
        <teble>
          <table>
          <tr>
            <div class="form-group my-2">
              <%= f.label :タイトル %>
              <%= f.text_field :title, placeholder:"タイトル", class: "offset-1" %>
            </div>
          </tr>

          <tr>
            <div class="form-group my-2">
              <div id="post_raty">
                <%= f.label :評価 %>
                <%#= f.text_field :evaluation, placeholder:"評価", class: "offset-1" %>
              </div>
            </div>
          </tr>

          <tr>
            <div class="form-group my-2">
              <%= f.label :住所 %>
              <%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt =>"--選択してください--" %><br>
              <%= f.text_field :address, placeholder:"住所", class: "offset-1" %>
            </div>
          </tr>

          <tr>
            <div class="form-group my-2">
              <%= f.label :本文 %>
              <%= f.text_area :reviw_text, rows:'5', placeholder:"本文", class: "offset-1" %>
            </div>
          </tr>

          <tr>
            <div class="form-group my-2">
              <%= f.label :画像 %>
              <%= f.file_field :image %>
            </div>
          </tr>

          <div class="form-action">
            <th><%= f.submit "変更を保存", class: "btn btn-success offset-2" %></th>
          </div>
        </teble>
      <% end %>
    </div>
  </div>
</div>
<!--評価Javascript-->
<script>
  let elem = document.getElementById('post_raty');
  let opt = {
    starOff:  '<%= asset_path('star-off.png') %>',
    starOn : '<%= asset_path('star-on.png') %>',
    starHalf: '<%= asset_path('star-half.png') %>',
    score: <%= @review.evaluation %>,
    scoreName: 'review[evaluation]',
    half: true,
  };
  raty(elem, opt);
</script>