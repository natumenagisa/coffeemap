<h4 class="filed my-2">新規会員登録</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <table>
    <tbody>
      <tr>
        <th>名前</th>
        <td class-"sign-up-small-cell"></td>
        <td><%= f.text_field :name, autofocus: true %></td>
      </tr>

      <tr>
        <th>メールアドレス</th>
        <td class="sign_up-small-cell"></td>
        <td><%= f.email_field :email, autocomplete: "email"%></td>
      </tr>

      <tr>
        <th>パスワード（6文字以上)</th>
        <td class="sign_up-small-cell"></td>
        <td><%= f.password_field :password %></td>
      </tr>

      <tr>
        <th>パスワード（確認用）</th>
        <td class="sign_up-small-cell"></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "current-password" %></td>
      </tr>
    </tbody>
  </table>
  <div class="customer-sign-up-actions">
    <%= f.submit "新規登録", class:"btn btn-success col-xs-3 col-xs-offset-5" %>
  </div>
<% end %>

<dvi class="container col-xs-6 col-xs-offset-2 sign-up-message">
  <h4>既に登録済みの方</h4>
  <span><%= link_to 'こちら', new_customer_session_path %>からログインしてください。</span>
</dvi>